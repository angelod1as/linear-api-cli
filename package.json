{
  "name": "linear-api",
  "version": "1.0.0",
  "description": "Non-interactive Linear CLI and MCP server designed for LLM agents and programmatic task management",
  "type": "module",
  "main": "linear.ts",
  "scripts": {
    "test": "tsx -r dotenv/config test.ts",
    "linear": "tsx -r dotenv/config cli.ts",
    "linear:teams": "tsx -r dotenv/config cli.ts teams",
    "linear:create": "tsx -r dotenv/config cli.ts create",
    "linear:update": "tsx -r dotenv/config cli.ts update",
    "linear:list": "tsx -r dotenv/config cli.ts list",
    "linear:get": "tsx -r dotenv/config cli.ts get",
    "linear:delete": "tsx -r dotenv/config cli.ts delete",
    "mcp:server": "tsx -r dotenv/config mcp-server.ts"
  },
  "keywords": [
    "linear",
    "api",
    "cli",
    "llm",
    "ai-agent",
    "task-management",
    "non-interactive",
    "automation",
    "issue-tracker",
    "mcp",
    "model-context-protocol",
    "mcp-server",
    "claude"
  ],
  "author": "Angelo Dias",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/angelod1as/linear-api-cli.git"
  },
  "bugs": {
    "url": "https://github.com/angelod1as/linear-api-cli/issues"
  },
  "homepage": "https://github.com/angelod1as/linear-api-cli#readme",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "@linear/sdk": "^62.0.0",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "commander": "^14.0.2",
    "dotenv": "^16.6.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^20.19.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
