{
  "name": "linear-api",
  "version": "1.0.0",
  "description": "Non-interactive Linear CLI designed for LLM agents and programmatic task management",
  "type": "module",
  "main": "linear.ts",
  "scripts": {
    "test": "tsx -r dotenv/config test.ts",
    "linear": "tsx -r dotenv/config cli.ts",
    "linear:teams": "tsx -r dotenv/config cli.ts teams",
    "linear:create": "tsx -r dotenv/config cli.ts create",
    "linear:list": "tsx -r dotenv/config cli.ts list",
    "linear:get": "tsx -r dotenv/config cli.ts get",
    "linear:delete": "tsx -r dotenv/config cli.ts delete"
  },
  "keywords": [
    "linear",
    "api",
    "cli",
    "llm",
    "ai-agent",
    "task-management",
    "non-interactive",
    "automation",
    "issue-tracker"
  ],
  "author": "Angelo Dias",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/angelodias/linear-api-cli.git"
  },
  "bugs": {
    "url": "https://github.com/angelodias/linear-api-cli/issues"
  },
  "homepage": "https://github.com/angelodias/linear-api-cli#readme",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "@linear/sdk": "^62.0.0",
    "commander": "^14.0.2",
    "dotenv": "^16.6.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
